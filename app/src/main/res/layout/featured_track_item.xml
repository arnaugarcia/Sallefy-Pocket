<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_track_thumbnail"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/application_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_track_title"
        style="@style/Headline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C3393939"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:singleLine="true"
        android:text="@string/track_title_placeholder"
        app:layout_constraintBottom_toBottomOf="@+id/iv_track_thumbnail"
        app:layout_constraintEnd_toEndOf="@+id/iv_track_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/iv_track_thumbnail" />

</androidx.constraintlayout.widget.ConstraintLayout>